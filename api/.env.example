# ============================================================
# HQX Web API - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file!
# ============================================================

# --- JWT Secret (REQUIRED - server will crash without this) ---
HQX_JWT_SECRET=

# --- Server Port ---
PORT=3001

# --- CORS allowed origins (comma-separated) ---
HQX_CORS_ORIGINS=http://localhost:5173,https://hedgequantx.com

# --- Proxy (inherited from CLI, needed for Rithmic connections) ---
HQX_PROXY_FR=
HQX_PROXY_URL=
HQX_PROXY_DISABLED=0
HQX_PROXY_REGION=FRANCE
